<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Motoplay.App"
             RequestedThemeVariant="Default">
             
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

	<!-- Application Resources -->
	<Application.Resources>
		<!-- Resources Dictionary -->
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<MergeResourceInclude Source="/Assets/Languages/LangStrings.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

		<!-- App font resources -->
		<FontFamily x:Key="Panton">avares://Motoplay/Assets/Fonts#Panton</FontFamily>
		<FontFamily x:Key="Nasalization">avares://Motoplay/Assets/Fonts#Nasalization</FontFamily>
	</Application.Resources>
	
</Application>
